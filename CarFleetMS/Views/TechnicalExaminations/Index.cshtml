@model IEnumerable<CarFleetMS.Models.TechnicalExamination>

@{
    ViewData["Title"] = "Index";
}

<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOfExam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Validity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfExam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Validity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.RegistrationNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ServiceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ServiceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ServiceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-warning"> <a asp-action="Create">Dodaj badanie</a></button>