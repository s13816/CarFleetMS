@model IEnumerable<CarFleetMS.Models.Address>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ulica
            </th>
            <th>
                Numer
            </th>            
            <th>
                Kod pocztowy
            </th>
            <th>
                Miasto
            </th>
            <th>
                Kraj
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            @if (item.ApartmentNumber != null)
            {
            <td>@Html.DisplayFor(modelItem => item.BuildingNumber) / @Html.DisplayFor(modelItem => item.ApartmentNumber)</td>
            } else {
            <td>@Html.DisplayFor(modelItem => item.BuildingNumber)</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AddressId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AddressId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AddressId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
